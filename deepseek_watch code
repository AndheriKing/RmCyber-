        // Cart array to store added products
        let cart = [];

        // DOM Content Loaded
        document.addEventListener('DOMContentLoaded', function() {
            // Render featured products
            renderFeaturedProducts();
            
            // Setup event listeners
            document.getElementById('searchButton').addEventListener('click', handleSearch);
            document.getElementById('searchInput').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    handleSearch();
                }
            });
            
            document.getElementById('loginForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Login successful!');
                $('#loginModal').modal('hide');
            });
            
            document.getElementById('registerForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const password = document.getElementById('registerPassword').value;
                const confirmPassword = document.getElementById('registerConfirmPassword').value;
                
                if (password !== confirmPassword) {
                    alert('Passwords do not match!');
                    return;
                }
                
                alert('Registration successful!');
                $('#registerModal').modal('hide');
            });
            
            document.getElementById('showRegister').addEventListener('click', function(e) {
                e.preventDefault();
                $('#loginModal').modal('hide');
                $('#registerModal').modal('show');
            });
            
            document.getElementById('showLogin').addEventListener('click', function(e) {
                e.preventDefault();
                $('#registerModal').modal('hide');
                $('#loginModal').modal('show');
            });
            
            document.getElementById('contactForm').addEventListener('submit', function(e) {
                e.preventDefault();
                alert('Your message has been sent successfully!');
                document.getElementById('contactForm').reset();
            });
            
            document.getElementById('checkoutButton').addEventListener('click', function() {
                if (cart.length === 0) {
                    alert('Your cart is empty!');
                    return;
                }
                
                alert('Order placed successfully! Thank you for your purchase.');
                cart = [];
                updateCartCount();
                document.getElementById('cartItems').innerHTML = '<p class="text-center">உங்கள் கார்ட் காலியாக உள்ளது</p>';
                document.getElementById('cartTotal').textContent = '₹0.00';
                document.getElementById('cartTax').textContent = '₹0.00';
                document.getElementById('cartGrandTotal').textContent = '₹0.00';
            });
        });

        // Show a specific section and hide others
        function showSection(sectionId) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show the requested section
            document.getElementById(sectionId).style.display = 'block';
            
            // Scroll to top
            window.scrollTo(0, 0);
            
            // If showing products section, render all products
            if (sectionId === 'products') {
                renderAllProducts();
            }
        }

        // Show products for a specific category
        function showCategory(category) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show the category section
            document.getElementById('category').style.display = 'block';
            
            // Set category title
            const categoryTitles = {
                'men': 'ஆண்கள் கடிகாரங்கள்',
                'women': 'பெண்கள் கடிகாரங்கள்',
                'sports': 'ஸ்போர்ட்ஸ் கடிகாரங்கள்',
                'smart': 'ஸ்மார்ட் கடிகாரங்கள்',
                'premium': 'பிரீமியம் கடிகாரங்கள்'
            };
            
            document.getElementById('categoryTitle').textContent = categoryTitles[category];
            
            // Render category products
            renderCategoryProducts(category);
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Show products for a specific brand
        function showBrand(brand) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show the brand section
            document.getElementById('brand').style.display = 'block';
            
            // Set brand title
            const brandTitles = {
                'seiko': 'Seiko',
                'tagheuer': 'TAG Heuer',
                'breitling': 'Breitling',
                'omega': 'Omega',
                'rolex': 'Rolex',
                'vacheron': 'Vacheron Constantin',
                'audemars': 'Audemars Piguet',
                'patek': 'Patek Philippe',
                'jaeger': 'Jaeger-LeCoultre',
                'cartier': 'Cartier'
            };
            
            document.getElementById('brandTitle').textContent = brandTitles[brand];
            
            // Render brand products
            renderBrandProducts(brand);
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Show product detail
        function showProductDetail(productId) {
            // Hide all content sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.style.display = 'none';
            });
            
            // Show the product detail section
            document.getElementById('product-detail').style.display = 'block';
            
            // Render product detail
            renderProductDetail(productId);
            
            // Scroll to top
            window.scrollTo(0, 0);
        }

        // Render featured products
        function renderFeaturedProducts() {
            const featuredProductContainer = document.getElementById('featuredProductContainer');
            featuredProductContainer.innerHTML = '';
            
            // Get 4 random products
            const featuredProducts = [...products].sort(() => 0.5 - Math.random()).slice(0, 4);
            
            featuredProducts.forEach(product => {
                const discount = Math.round((1 - product.price / product.originalPrice) * 100);
                
                const productCard = `
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <div class="position-relative">
                                <img src="${product.image}" class="card-img-top" alt="${product.name}">
                                ${discount > 0 ? `<div class="discount-badge">-${discount}%</div>` : ''}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text">${product.description.substring(0, 60)}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="card-text fw-bold mb-0">₹${product.price.toLocaleString()}</p>
                                        ${product.originalPrice > product.price ? 
                                            `<p class="card-text text-muted text-decoration-line-through mb-0">₹${product.originalPrice.toLocaleString()}</p>` : ''}
                                    </div>
                                    <button class="btn btn-primary add-to-cart" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                featuredProductContainer.innerHTML += productCard;
            });
            
            // Add event listeners to Add to Cart buttons
            document.querySelectorAll('#featuredProductContainer .add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    addToCart(productId);
                });
            });
            
            // Add event listeners to product cards for detail view
            document.querySelectorAll('#featuredProductContainer .product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('add-to-cart')) {
                        const productId = parseInt(this.querySelector('.add-to-cart').getAttribute('data-id'));
                        showProductDetail(productId);
                    }
                });
            });
        }

        // Render all products
        function renderAllProducts() {
            const productContainer = document.getElementById('productContainer');
            productContainer.innerHTML = '';
            
            products.forEach(product => {
                const discount = Math.round((1 - product.price / product.originalPrice) * 100);
                
                const productCard = `
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <div class="position-relative">
                                <img src="${product.image}" class="card-img-top" alt="${product.name}">
                                ${discount > 0 ? `<div class="discount-badge">-${discount}%</div>` : ''}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text">${product.description.substring(0, 60)}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="card-text fw-bold mb-0">₹${product.price.toLocaleString()}</p>
                                        ${product.originalPrice > product.price ? 
                                            `<p class="card-text text-muted text-decoration-line-through mb-0">₹${product.originalPrice.toLocaleString()}</p>` : ''}
                                    </div>
                                    <button class="btn btn-primary add-to-cart" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                productContainer.innerHTML += productCard;
            });
            
            // Add event listeners to Add to Cart buttons
            document.querySelectorAll('#productContainer .add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    addToCart(productId);
                });
            });
            
            // Add event listeners to product cards for detail view
            document.querySelectorAll('#productContainer .product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('add-to-cart')) {
                        const productId = parseInt(this.querySelector('.add-to-cart').getAttribute('data-id'));
                        showProductDetail(productId);
                    }
                });
            });
        }

        // Render category products
        function renderCategoryProducts(category) {
            const categoryProductContainer = document.getElementById('categoryProductContainer');
            categoryProductContainer.innerHTML = '';
            
            const categoryProducts = products.filter(product => product.category === category);
            
            if (categoryProducts.length === 0) {
                categoryProductContainer.innerHTML = '<p class="text-center">No products found in this category</p>';
                return;
            }
            
            categoryProducts.forEach(product => {
                const discount = Math.round((1 - product.price / product.originalPrice) * 100);
                
                const productCard = `
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <div class="position-relative">
                                <img src="${product.image}" class="card-img-top" alt="${product.name}">
                                ${discount > 0 ? `<div class="discount-badge">-${discount}%</div>` : ''}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text">${product.description.substring(0, 60)}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="card-text fw-bold mb-0">₹${product.price.toLocaleString()}</p>
                                        ${product.originalPrice > product.price ? 
                                            `<p class="card-text text-muted text-decoration-line-through mb-0">₹${product.originalPrice.toLocaleString()}</p>` : ''}
                                    </div>
                                    <button class="btn btn-primary add-to-cart" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                categoryProductContainer.innerHTML += productCard;
            });
            
            // Add event listeners to Add to Cart buttons
            document.querySelectorAll('#categoryProductContainer .add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    addToCart(productId);
                });
            });
            
            // Add event listeners to product cards for detail view
            document.querySelectorAll('#categoryProductContainer .product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('add-to-cart')) {
                        const productId = parseInt(this.querySelector('.add-to-cart').getAttribute('data-id'));
                        showProductDetail(productId);
                    }
                });
            });
        }

        // Render brand products
        function renderBrandProducts(brand) {
            const brandProductContainer = document.getElementById('brandProductContainer');
            brandProductContainer.innerHTML = '';
            
            const brandProducts = products.filter(product => product.brand === brand);
            
            if (brandProducts.length === 0) {
                brandProductContainer.innerHTML = '<p class="text-center">No products found for this brand</p>';
                return;
            }
            
            brandProducts.forEach(product => {
                const discount = Math.round((1 - product.price / product.originalPrice) * 100);
                
                const productCard = `
                    <div class="col-md-3 mb-4">
                        <div class="card product-card">
                            <div class="position-relative">
                                <img src="${product.image}" class="card-img-top" alt="${product.name}">
                                ${discount > 0 ? `<div class="discount-badge">-${discount}%</div>` : ''}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">${product.name}</h5>
                                <p class="card-text">${product.description.substring(0, 60)}...</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="card-text fw-bold mb-0">₹${product.price.toLocaleString()}</p>
                                        ${product.originalPrice > product.price ? 
                                            `<p class="card-text text-muted text-decoration-line-through mb-0">₹${product.originalPrice.toLocaleString()}</p>` : ''}
                                    </div>
                                    <button class="btn btn-primary add-to-cart" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                brandProductContainer.innerHTML += productCard;
            });
            
            // Add event listeners to Add to Cart buttons
            document.querySelectorAll('#brandProductContainer .add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const productId = parseInt(this.getAttribute('data-id'));
                    addToCart(productId);
                });
            });
            
            // Add event listeners to product cards for detail view
            document.querySelectorAll('#brandProductContainer .product-card').forEach(card => {
                card.addEventListener('click', function(e) {
                    if (!e.target.classList.contains('add-to-cart')) {
                        const productId = parseInt(this.querySelector('.add-to-cart').getAttribute('data-id'));
                        showProductDetail(productId);
                    }
                });
            });
        }

        // Render product detail
        function renderProductDetail(productId) {
            const productDetailContainer = document.getElementById('productDetailContainer');
            productDetailContainer.innerHTML = '';
            
            const product = products.find(p => p.id === productId);
            
            if (!product) {
                productDetailContainer.innerHTML = '<p class="text-center">Product not found</p>';
                return;
            }
            
            const discount = Math.round((1 - product.price / product.originalPrice) * 100);
            
            const productDetail = `
                <div class="col-md-6">
                    <img src="${product.image}" class="img-fluid product-detail-image" alt="${product.name}">
                </div>
                <div class="col-md-6">
                    <h2>${product.name}</h2>
                    <div class="d-flex align-items-center mb-3">
                        <h3 class="text-primary me-3">₹${product.price.toLocaleString()}</h3>
                        ${product.originalPrice > product.price ? 
                            `<del class="text-muted me-2">₹${product.originalPrice.toLocaleString()}</del>
                             <span class="badge bg-danger">-${discount}%</span>` : ''}
                    </div>
                    <p class="mb-4">${product.description}</p>
                    
                    <h4 class="mb-3">அம்சங்கள்</h4>
                    <ul class="mb-4">
                        ${product.features.map(feature => `<li>${feature}</li>`).join('')}
                    </ul>
                    
                    <div class="d-flex">
                        <button class="btn btn-primary me-3 add-to-cart-detail" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                        <button class="btn btn-outline-primary buy-now-detail" data-id="${product.id}">இப்போது வாங்க</button>
                    </div>
                </div>
            `;
            
            productDetailContainer.innerHTML = productDetail;
            
            // Add event listeners to buttons
            document.querySelector('.add-to-cart-detail').addEventListener('click', function() {
                addToCart(productId);
            });
            
            document.querySelector('.buy-now-detail').addEventListener('click', function() {
                addToCart(productId);
                showSection('cart');
            });
        }

        // Handle search functionality
        function handleSearch() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            
            if (searchTerm.trim() === '') {
                alert('Please enter a search term');
                return;
            }
            
            const searchResults = products.filter(product => 
                product.name.toLowerCase().includes(searchTerm) || 
                product.description.toLowerCase().includes(searchTerm) ||
                product.category.toLowerCase().includes(searchTerm) ||
                product.brand.toLowerCase().includes(searchTerm)
            );
            
            const searchResultsContainer = document.getElementById('searchResultsContainer');
            const searchResultsSection = document.getElementById('searchResults');
            
            searchResultsContainer.innerHTML = '';
            
            if (searchResults.length === 0) {
                searchResultsContainer.innerHTML = '<p class="text-center">No products found matching your search</p>';
            } else {
                searchResults.forEach(product => {
                    const discount = Math.round((1 - product.price / product.originalPrice) * 100);
                    
                    const productCard = `
                        <div class="col-md-3 mb-4">
                            <div class="card product-card">
                                <div class="position-relative">
                                    <img src="${product.image}" class="card-img-top" alt="${product.name}">
                                    ${discount > 0 ? `<div class="discount-badge">-${discount}%</div>` : ''}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">${product.name}</h5>
                                    <p class="card-text">${product.description.substring(0, 60)}...</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <p class="card-text fw-bold mb-0">₹${product.price.toLocaleString()}</p>
                                            ${product.originalPrice > product.price ? 
                                                `<p class="card-text text-muted text-decoration-line-through mb-0">₹${product.originalPrice.toLocaleString()}</p>` : ''}
                                        </div>
                                        <button class="btn btn-primary add-to-cart" data-id="${product.id}">கார்ட்டில் சேர்க்க</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    searchResultsContainer.innerHTML += productCard;
                });
                
                // Add event listeners to Add to Cart buttons in search results
                document.querySelectorAll('#searchResultsContainer .add-to-cart').forEach(button => {
                    button.addEventListener('click', function() {
                        const productId = parseInt(this.getAttribute('data-id'));
                        addToCart(productId);
                    });
                });
                
                // Add event listeners to product cards for detail view
                document.querySelectorAll('#searchResultsContainer .product-card').forEach(card => {
                    card.addEventListener('click', function(e) {
                        if (!e.target.classList.contains('add-to-cart')) {
                            const productId = parseInt(this.querySelector('.add-to-cart').getAttribute('data-id'));
                            showProductDetail(productId);
                        }
                    });
                });
            }
            
            // Show the search results section
            showSection('searchResults');
        }

        // Add product to cart
        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            
            if (!product) return;
            
            const existingItem = cart.find(item => item.id === productId);
            
            if (existingItem) {
                existingItem.quantity += 1;
            } else {
                cart.push({
                    id: product.id,
                    name: product.name,
                    price: product.price,
                    image: product.image,
                    quantity: 1
                });
            }
            
            updateCartCount();
            updateCartDisplay();
            
            alert(`${product.name} added to cart!`);
        }

        // Update cart count badge
        function updateCartCount() {
            const totalItems = cart.reduce((total, item) => total + item.quantity, 0);
            document.getElementById('cartCount').textContent = totalItems;
        }

        // Update cart display
        function updateCartDisplay() {
            const cartItemsContainer = document.getElementById('cartItems');
            const cartTotalElement = document.getElementById('cartTotal');
            const cartTaxElement = document.getElementById('cartTax');
            const cartGrandTotalElement = document.getElementById('cartGrandTotal');
            
            if (cart.length === 0) {
                cartItemsContainer.innerHTML = '<p class="text-center">உங்கள் கார்ட் காலியாக உள்ளது</p>';
                cartTotalElement.textContent = '₹0.00';
                cartTaxElement.textContent = '₹0.00';
                cartGrandTotalElement.textContent = '₹0.00';
                return;
            }
            
            cartItemsContainer.innerHTML = '';
            
            let total = 0;
            
            cart.forEach(item => {
                const itemTotal = item.price * item.quantity;
                total += itemTotal;
                
                const cartItem = `
                    <div class="cart-item">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="${item.image}" alt="${item.name}" class="img-fluid">
                            </div>
                            <div class="col-md-4">
                                <h6>${item.name}</h6>
                            </div>
                            <div class="col-md-2">
                                <p>₹${item.price.toLocaleString()}</p>
                            </div>
                            <div class="col-md-2">
                                <div class="input-group">
                                    <button class="btn btn-outline-secondary decrease-quantity" data-id="${item.id}">-</button>
                                    <input type="text" class="form-control text-center quantity-input" value="${item.quantity}" readonly>
                                    <button class="btn btn-outline-secondary increase-quantity" data-id="${item.id}">+</button>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <p class="fw-bold">₹${itemTotal.toLocaleString()}</p>
                            </div>
                        </div>
                    </div>
                `;
                
                cartItemsContainer.innerHTML += cartItem;
            });
            
            // Add event listeners to quantity buttons
            document.querySelectorAll('.increase-quantity').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = parseInt(this.getAttribute('data-id'));
                    const item = cart.find(item => item.id === itemId);
                    if (item) {
                        item.quantity += 1;
                        updateCartDisplay();
                    }
                });
            });
            
            document.querySelectorAll('.decrease-quantity').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = parseInt(this.getAttribute('data-id'));
                    const item = cart.find(item => item.id === itemId);
                    if (item) {
                        item.quantity -= 1;
                        if (item.quantity === 0) {
                            cart = cart.filter(i => i.id !== itemId);
                        }
                        updateCartCount();
                        updateCartDisplay();
                    }
                });
            });
            
            const tax = total * 0.18;
            const grandTotal = total + tax;
            
            cartTotalElement.textContent = `₹${total.toLocaleString()}`;
            cartTaxElement.textContent = `₹${tax.toLocaleString()}`;
            cartGrandTotalElement.textContent = `₹${grandTotal.toLocaleString()}`;
        }
    </script>
</body>
</html>
